<% provide(:title, "All Projects") %>
<div class="row-fluid">
 <div class="span12">

  <div class="row-fluid">
   <div class="span2">
   	<section>
		<h3>Show</h3>
		<%= form_tag '/nav' do%>
		<%= select_tag "category", options_from_collection_for_select(@categories, "id", "name", selected: @cat_indx), multiple: false, prompt: "All" %> <!-- solucion parcial, hay que incluir el all como seleccionable -->
		
		 
		<%= check_box_tag :online, true, 'active' %> <%= label_tag 'Online'%> 
		<%= check_box_tag :offline, true, 'active' %> <%= label_tag 'Offline'%>

		<%= submit_tag "show"%>
		<% end %>
	</section>

	<section>
		<h2>Text</h2>
	</section>
   </div>
<!--h1>All projects</h1-->
   <div class="span10">
<!-- Desde aqui se debe hacer interactivo-->
	<%= render 'projects' %>
   </div>
  </div>
 </div>
</div>