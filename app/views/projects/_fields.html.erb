<%= form_for(@project) do |f| %>

	  <%= render 'shared/error_messages', object: f.object %>

        <%= f.file_field :cover %>

	  <%= f.label :name %>
  	  <%= f.text_field :name %>

  	  <%= f.label :description %>
  	  <%= f.text_area :description %>

      <%= f.label :category_id, "Please choose a category:" %>
      <%= f.select :category_id, options_from_collection_for_select(@categories, "id", "name", selected: @project.category.id) %> <!-- selected: @project.category.name  -->

      <%= f.check_box :profitable %>
      <%= f.label :profitable, "This project is profitable", class: "help-inline" %>
      <%= f.check_box :online %>
      <%= f.label :online, "This is an online project", class: "help-inline" %>
      </br>
      <%= f.label :place, "This project runs at" %>
      <%= f.text_field :place, placeholder: "Type a city" %>

      <%= f.label :tags, "Tags: separate with colon" %>
      <%= f.text_field :tags %>

      <%= f.check_box :finished %>
      <%= f.label :finished, "Mark this project as finished", class: "help-inline" %>
      </br>

      <%= f.submit "Save", class: "btn btn-large btn-primary" %>
	<% end %>