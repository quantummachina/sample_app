<% for task in @project.tasks do %>
    <% if task.done == false %>
      <p>

      <% if collaborator?(@project) %>
      	<%= link_to controller: "tasks", action: "check", id: task.id , title: "mark done" do %>
  			<i class="icon-ok"></i>
		    <% end %>
      <% end %>

      <%= task.description %> , <%= task.user.name %>

      <% if collaborator?(@project) %><%= render 'shared/rem', obj: task %><% end %>
      </p>
    <% end %>
<% end %>